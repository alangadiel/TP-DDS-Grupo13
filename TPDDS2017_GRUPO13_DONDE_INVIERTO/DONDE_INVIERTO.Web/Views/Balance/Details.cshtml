@model DONDE_INVIERTO.Model.Views.BalanceView
@{
    ViewBag.Title = "Details";
}


<div class="jumbotron form-horizontal">
    <h1>Balance</h1>

    <div class="form-group">
        <label>Empresa : @Model.Empresa.Nombre</label>
    </div>
    <div class="form-group">
        <label>Periodo : @Model.Periodo</label>
    </div>
    <div class="form-group">
        <label>Cuentas</label>
        <table class="table-bordered" style="font-size:14px">
            <tr>
                <th>Nombre</th>
                <th>Valor</th>
            </tr>
            @foreach (var item in Model.Cuentas)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>$@item.Valor</td>
                </tr>
            }
        </table>
    </div>
</div>

