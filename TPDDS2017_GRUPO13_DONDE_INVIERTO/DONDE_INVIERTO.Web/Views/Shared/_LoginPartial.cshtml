﻿@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "User", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="#">Hola, @User.Identity.GetUserName()!</a>
                
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-toggle-off"></i> Salir</a></li>
        </ul>
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Empresas", "Index", "Empresa")</li>
            <li>@Html.ActionLink("Indicadores", "Index", "Indicador")</li>
            <li>@Html.ActionLink("Balances", "Index", "Balance")</li>
            <li>@Html.ActionLink("Metodologias", "Index", "Metodologia")</li>
            <li>@Html.ActionLink("Condiciones", "Index", "Condicion")</li>
        </ul>
    }
}
else
{
        <ul class="nav navbar-nav navbar-right">
    </ul>
}
