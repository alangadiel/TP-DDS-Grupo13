<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DONDE INVIERTO</title>

    @Styles.Render("~/Content/cssLogin")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datetimepicker")
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/bootstrap-dialog")
    @Scripts.Render("~/bundles/chosen")
    @Scripts.Render("~/bundles/fileupload")
    @Scripts.Render("~/bundles/switch")
    @Scripts.Render("~/bundles/loginjs")
</head>
<body>
    <div id="body-content" class="body-content">
        @model DONDE_INVIERTO.Model.Usuario

        @{
            ViewBag.Title = "Login";
            Layout = null;
        }



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <label name="title">Bienvenido a Donde Invierto</label>
            <div class="formholder">
                <div class="randompad">
                    <fieldset>
                        @Html.LabelFor(model => model.UserName, "Usuario", htmlAttributes: new { @name = "email" })
                        @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { @type = "email" })
                        @Html.LabelFor(model => model.Contrasenia, "Contraseña", htmlAttributes: new { @name = "password" })
                        @Html.TextBoxFor(model => model.Contrasenia, htmlAttributes: new { @type = "password" })
                        <input type="submit" value="Ingresar" />
                    </fieldset>
                </div>
            </div>

        }

    </div>
</body>
</html>





