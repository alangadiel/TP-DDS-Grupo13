@model TpIntegradorDiuj.Models.Empresa

@{
    ViewBag.Title = "Crear Empresa";
}

<h2>Crear Empresa</h2>
@using (Html.BeginForm("Create", "Empresas", FormMethod.Post,new { @id = "form" }))
{
    <div class="form-horizontal" >
        <div class="alert alert-danger divErrores" style="display: none;">
            <strong>Errores:<br></strong> <ul id="listaErrores"></ul>
        </div>
        <div class="form-group"><label>Nombre</label><input id="nombre" type="text" name="Nombre" placeholder="Nombre" class="form-control" required/> </div>
        <div class="form-group"><label>CUIT</label><input id="cuit" type="text" name="CUIT" placeholder="CUIT (sin puntos ni guiones)" class="form-control" required /> </div>

        <div class="form-group"><label>Fecha de fundación</label><input id="fecha" type="date" name="FechaFundacion" class="form-control" required/> </div>
        <div class="form-group"> <input type="button" class="btn btn-primary" value="Guardar" onclick="submitear()"/></div>
    </div>

}

<script>
    function submitear() {
        var nombreCheck = /^[a-zA-Z0-9\s]{1,30}$/.test($("#nombre").val());
        var cuitCheck = /^[0-9\s]{1,11}$/.test($("#cuit").val());
        fechaForm = new Date(Date.parse($("#fecha").val())+3600000*3);
        fechaActual=new Date();
        var fechaCheck = fechaForm < fechaActual;
        var errores="";
        if (!nombreCheck)
            errores += "<li>El nombre es obligatorio y solo puede contener numeros, minusculas, mayusculas y espacios, con un maximo de 30 caracteres.</li>";
        if (!cuitCheck)
            errores += "<li>El cuit es obligatorio y solo puede contener numeros, con un maximo de 11 caracteres.</li>";
        if (!fechaCheck) 
            errores += "<li>La fecha es obligatoria y no puede ser futura.</li>";
        if (nombreCheck && cuitCheck && fechaCheck)
            $("#form").submit();
        else {
            $("#listaErrores").html(errores);
            $(".divErrores").show();
        }
    }
</script>