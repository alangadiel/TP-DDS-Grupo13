            <div id="cuentasAAgregar">
                <h4>Cuentas</h4>
                <table class="cuentasTable table-condensed table-bordered" style="width:500px;">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Valor</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody class="cuerpo"></tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td><a href="#" onclick="agregarCuenta()" value="+" id="agregarCuenta"> +</a></td>
                    </tr>
