            tambien se debe ir actualizando a medida que se agregan nuevas cuentas-->
    </div>
</div>

<script>
    function validar(){
        var resultado=true;
        $(".valor").each(function(){
            var check = /^[0-9]+$/.test($(this).val());
            if(!check)
                resultado=false;
        });
        if(resultado)
            $("#form").submit();
        else
            $(".divErrores").show();
    }
</script>