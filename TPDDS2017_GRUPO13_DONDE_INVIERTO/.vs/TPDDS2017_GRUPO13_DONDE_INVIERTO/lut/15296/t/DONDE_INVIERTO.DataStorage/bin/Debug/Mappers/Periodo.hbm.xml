<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="DONDE_INVIERTO.Model"
                   namespace="DONDE_INVIERTO.Model">
  <class name="Periodo"  table="periodo">
    <id name="Id"
        column="per_id">
      <generator class="native" />
    </id>
    <property name="Anio" column="per_anio" type="datetime" not-null="true"/>
    <property name="Semestre" column="per_semestre" type="int" not-null="true"/>
  </class>
</hibernate-mapping>