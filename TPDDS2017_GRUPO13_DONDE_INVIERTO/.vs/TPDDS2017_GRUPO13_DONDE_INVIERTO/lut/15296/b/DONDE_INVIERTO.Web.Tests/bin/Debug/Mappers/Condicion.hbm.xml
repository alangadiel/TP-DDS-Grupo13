<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="DONDE_INVIERTO.Model"
                   namespace="DONDE_INVIERTO.Model">
  <class name="Condicion"  table="condicion">
    <id name="Id"
        column="cond_id">
      <generator class="native" />
    </id>
    <property name="Descartar" column="cond_descartar" type="string" length="200" not-null="true"/>
    <property name="Ordenar" column="cond_ordenar" type="string" length="200" not-null="true"/>
  </class>
</hibernate-mapping>